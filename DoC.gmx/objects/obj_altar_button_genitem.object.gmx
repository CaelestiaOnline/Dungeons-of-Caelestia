            if(scr_crit_attack(0.1)) new_item_type = choose("prim", "sec", "mag", "item", "pickup");
            var new_item_index = scr_get_random_valid_rarity_type_item(new_item_type, new_item_rarity);
            global.altar_item_index = new_item_index;
            scr_deal_player_damage(50);
            progress.run_money -= item_prize;
            var text_ind = instance_create(x, y - 128, obj_gui_text_ind);
            text_ind.draw_colour = c_green;
            text_ind.text = "NEUES ITEM GENERIERT!";
