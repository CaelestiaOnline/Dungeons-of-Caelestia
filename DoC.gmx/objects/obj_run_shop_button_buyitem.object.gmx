            text_ind.draw_colour = c_green;
            text_ind.text = "ITEM WURDE GEKAUFT!";
            var text_ind = instance_create(x, y - 152, obj_gui_text_ind);
            text_ind.draw_colour = c_red;
            text_ind.text = "-" + string(item_prize) + "RM";
        } else {
            scr_button_draw_invalid_action(0, -64);
