move = 0;

move -= max(global.kb_up_pressed, global.kb_w_pressed, 0);
move += max(global.kb_down_pressed, global.kb_s_pressed, 0);

if(move != 0) {
    menupos += move;
    if(menupos &lt; 0) menupos = menulength - 1;
    if(menupos &gt; menulength - 1) menupos = 0;
    alarm_set(1, room_speed/4);
}

if(global.kb_up_pressed  == false &amp;&amp; global.kb_w_pressed == false) move -= max(global.kb_up, global.kb_w, 0);
if(global.kb_down_pressed  == false &amp;&amp; global.kb_s_pressed == false) move += max(global.kb_down, global.kb_s, 0);

if(move != 0) {
    if(alarm_get(1) == -1) alarm_set(1, room_speed/4);
    if(alarm_get(1) == 0) {
    menupos += move;
    if(menupos &lt; 0) menupos = menulength - 1;
    if(menupos &gt; menulength - 1) menupos = 0;
    }
}

var push;
push = max(global.kb_enter_pressed, global.kb_space_pressed, 0);
if(push == 1) script_execute(script);

</string>
